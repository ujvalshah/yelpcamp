<% include ../partials/header %>



    <div class="row">
      <h1 style="text-align: center"> Edit Campground <%=campground.name%></h1>
      <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                   <label for="campground[name]">Name</label>
                   <input class="form-control" type="text" id="campground[name]" name="campground[name]" value="<%=campground.name%>">
                </div>
                
                
                <div class="form-group">
                   <label for="image">Image</label>
                   <input class="form-control" type="file" name="image" id="image" accept="image/*" value="<%= campground.image %>">
                </div>
                
                <div class="form-group">
                   <label for="campground[price]">Price</label>
                   <input class="form-control" type="number" id="campground[price]" name="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01">
                </div>
                
                
                <div class="form-group">
                   <label for="campground[description]">Description</label>
                   <input class="form-control" type="text" id="campground[description]" name="campground[description]" value="<%=campground.description%>n">
                </div>
                
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>

                <div class="form-group">
                 <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
            </form>
      </div>
                  <a  href="/campgrounds">Back to Campgrounds</a>
    </div>


<% include ../partials/footer %>