<% include ../partials/header %>


<div class="container">
    <div class="row">
      <h1 style="text-align: center">Add a new Camp Ground</h1>
      <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                   <input class="form-control" type="text" name="name" placeholder="Enter a name">
                </div>
                <div class="form-group">
                   <input class="form-control" type="number" name="price" placeholder="Enter a price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                   <input class="form-control" type="text" name="image" placeholder="Enter Image URL">
                </div>
                <div class="form-group">
                   <input class="form-control" type="text" name="description" placeholder="Enter description">
                </div>
                <div class="form-group">
                 <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
            </form>
            <a  href="/campgrounds">Back to Campgrounds</a>
      </div>
    </div>
</div>

<% include ../partials/footer %>